<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.henheang.stock_flow_commerce.repository.CategoryRepository">
    
    <resultMap id="CategoryResultMap" type="com.henheang.stock_flow_commerce.repository.CategoryRepository">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="getCategoryById" resultMap="CategoryResultMap">
        SELECT c.id,
               c.name,
               c.created_at,
               c.updated_at
        FROM tb_store_category sc JOIN  tb_category c ON c.id = sc.category_id
        WHERE  sc.category_id = #{id} AND sc.store_id = #{storeId}
    </select>

</mapper>